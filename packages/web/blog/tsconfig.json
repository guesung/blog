{
  "extends": "@guesung/typescript-config/nextjs.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".contentlayer/generated"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@*": [
        "src/*"
      ],
      "#*": [
        "public/*"
      ],
      "@contents": [
        "./.contentlayer/generated"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  }
}
